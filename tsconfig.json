{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "dist",
    "rootDir": ".",

    "declaration": false,
    "noEmit": false,

    "allowImportingTsExtensions": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
